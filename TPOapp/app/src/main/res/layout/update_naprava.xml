<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="6dp">


    <EditText
        android:id="@+id/id_naprava_update"
        android:layout_width="178dp"
        android:layout_height="40dp"
        android:layout_marginTop="208dp"
        android:text="ID of device"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/info_naprava_update"
        android:layout_width="178dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:text="Info of device"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_naprava_update" />

    <EditText
        android:id="@+id/info_naprava_update_2"
        android:layout_width="178dp"
        android:layout_height="40dp"
        android:text="Info of device 2"
        app:layout_constraintBottom_toTopOf="@+id/update_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_naprava_update"
        app:layout_constraintVertical_bias="0.193" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="182dp"
        android:layout_height="46dp"
        android:layout_marginBottom="272dp"
        android:text="@string/update_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>